DATABASE_URL=sqlite:auth.db
# Generate a 32-byte (64 hex characters) encryption key with: openssl rand -hex 32
TOTP_ENCRYPTION_KEY=your_64_character_hex_key_here
# JWT secret for session tokens (use a strong random string) openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_change_in_production

# CPR pepper for additional security (use a strong random string, 32+ characters)
# Generate with: openssl rand -base64 32
CPR_PEPPER=your_random_secret_string_here

# Rate limiting configuration
# Set to true if application is behind a reverse proxy (nginx, cloudflare, etc.)
# This enables trust of X-Forwarded-For and similar proxy headers
RATE_LIMIT_TRUST_PROXY=true

# TLS/HTTPS Configuration
# Path to TLS certificate (PEM format)
TLS_CERT_PATH=certs/cert.pem

# Path to password-protected private key (PKCS#8 PEM format)
TLS_KEY_PATH=certs/key.pem

# Password for encrypted private key (generate with: openssl rand -base64 32)
# IMPORTANT: This protects your private key from unauthorized use
TLS_KEY_PASSWORD=your_strong_password_here_change_in_production

# HTTPS port (default 3443)
HTTPS_PORT=3443

# Bind address (use 0.0.0.0 to allow external connections, 127.0.0.1 for localhost only)
BIND_ADDRESS=127.0.0.1
